<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "App Pbsi" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "PBSI Sulsel" %>">
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
  </head>
  <body class="<%= controller_name %> <%= action_name %>">  

    <div class="navbar-wrapper">
      <div class="container">
        <div id="logo-utama"></div>
        <div class="navbar navbar-inverse">
          <nav class="navbar-inner">        
            <%= render 'layouts/navigation' %>        
          </nav>
        </div>
        <%= render 'layouts/carousel' %>      
        <%= render 'layouts/berita1' %>
        <%= render 'layouts/berita2' %>
        <div id="main" role="main">
          <div class="container">
            <%= render 'layouts/utama' %>
            <div class="content">             
              <footer>
                <div class="container">
                  <p class="muted credit">Developed on 2013</p>
                </div>
              </footer>
            </div>
          </div> <!--! end of .container -->
        </div> <!--! end of #main -->
      </div> <!--! end of .container -->
    </div> <!--! end of .navbar-wrapper -->
  </body>
</html>